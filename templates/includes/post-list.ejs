<div class="container-fluid">
  <div class="row justify-content-center">
    <!-- <div class="col-lg-5 col-md-10 mx-auto"> -->
    <!-- <div class="col-xl-10 col-lg-5 col-md-10 mx-auto"> -->
    <% posts.forEach(function(post) { %>


      <!-- 每行的总容器 -->
      <div style="background: center / cover no-repeat url('<%=post.feature%>'); text-shadow: 1px 1px 2px black;"
        class="post-row-container col-xl-3 col-lg-5 col-md-5">

        <!-- 第0层；标题 -->
        <div class="title-floor">
          <div class="post-title-container">
            <% if (post.isTop) { %>
              <span class="sticky-top-flag gt-bg-accent-color-first">置顶</span>
              <% } %>
                <a href="<%= post.link %>">
                  <h2 class="post-title">
                    <%= post.title %>
                  </h2>
                </a>
          </div>
        </div>
        <!-- 第一层：包含文章描述、时间信息、封面图 -->
        <div class="post-row-first-floor row">
          <% if (themeConfig.showFeatureImage && post.feature) { %>
            <div class="post-preview col-xl-10 col-lg-10 col-md-10">
              <% } else { %>
                <div class="post-preview col-xl-10 col-lg-10 col-md-10">
                  <% } %>
                    <h3 class="post-subtitle">
                      <%- post.abstract %>
                    </h3>
                    <p class="post-meta">
                      <span class="time">
                        <%= post.dateFormat %> |
                      </span>
                      
                      <span class="post-stats">
                        <%= post.stats.text %>
                      </span>
                    </p>
                </div>
                <!-- <% if (themeConfig.showFeatureImage && post.feature) { %>
                  <a href="<%= post.link %>" class="post-feature-image col-xl-5 col-lg-5 col-md-5"
                    style="background-image: url('<%= post.feature %>')">
                  </a>
                  <% } %> -->
            </div>
            <!-- 第二层：下划线、占位标签、tags -->
            <div class="post-row-sec-floor">
              <hr>
              <div class="clearfix"></div>
              <% post.tags.forEach(function(tag) { %>
                <a href="<%= tag.link %>" class="post-tag">
                  <%= tag.name %>
                </a>
                <% }); %>
            </div>
        </div>
        <% }); %>
          <!-- <% if (pagination.prev) { %>
      <a class="btn btn-primary float-left" href="<%= pagination.prev %>">&#9664; 上一页</a>
      <% } %>
      <% if (pagination.next) { %>
      <a class="btn btn-primary float-right" href="<%= pagination.next %>">下一页 &#9654;</a>
      <% } %> -->
          <!-- </div> -->
      </div>
  </div>